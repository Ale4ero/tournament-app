{
  "rules": {
    "organizations": {
      "$orgId": {
        ".read": true,
        ".write": "auth != null && (
          !data.exists() ||
          root.child('organizations').child($orgId).child('admins').child(auth.uid).exists()
        )"
      }
    },
    "tournaments": {
      ".read": true,
      "$tournamentId": {
        ".read": true,
        ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
      }
    },
    "tournamentDrafts": {
      "$draftId": {
        ".read": "auth != null &&
          root.child('users').child(auth.uid).child('role').val() === 'admin' &&
          (!data.exists() || data.child('createdBy').val() === auth.uid)",
        ".write": "auth != null &&
          root.child('users').child(auth.uid).child('role').val() === 'admin' &&
          root.child('users').child(auth.uid).child('organizationId').val() != null &&
          (!data.exists() || data.child('createdBy').val() === auth.uid)",
        "advanceRules": {
          ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
          ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
        }
      }
    },
    "matches": {
      "$tournamentId": {
        ".read": true,
        ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
        "$matchId": {
          ".read": true,
          ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
          "scoreboardId": {
            ".write": true
          },
          "hasLiveScoreboard": {
            ".write": true
          }
        }
      }
    },
    "submissions": {
      ".read": true,
      ".write": true
    },
    "scoreboards": {
      "$scoreboardId": {
        ".read": true,
        ".write": true
      }
    },
    "pools": {
      "$tournamentId": {
        ".read": true,
        ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
        "$poolId": {
          ".read": true,
          ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
          "standings": {
            ".read": true,
            ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
          }
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && auth.uid === $uid"
      }
    }
  }
}
